/**app.wxss**/
@import 'assets/styles/weui.wxss';
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.page-footer__top {
  position: fixed;
  bottom: 116rpx;
  right: 44rpx;
}

.page-footer__top [class^="icon-"] {
  font-size: 82rpx;
  color: rgba(50, 52, 54, .68);
  text-shadow: 0 0 20px rgba(10, 10, 10, .2);
}

/** nav-tabs **/
.nav-tabs__opts {
  position: fixed;
  right: 30rpx;
  top: 0;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 180rpx;
  z-index: 301
}

.nav-tabs__opts .nav-tabs__opts-item {
  width: 88rpx;
  text-align: center;
  
}

.nav-tabs__opts .nav-tabs__opts-item [class^="icon-"] {
  font-size: 22px;
  color: #377ade;
}

/* 占位符样式 */
.input-placeholder,
.textarea-placeholder {
  color: #ccc!important;
}

/* form必填字符 */
.txt-required {
  position: relative；
}

.txt-required::before {
  content: '*';
  position: absolute;
  color: #f40;
  margin-top: 4rpx;
  left: 12rpx;
}

/* 列表页 */

.cell-cnt {
  margin-top: 12px !important;
  
}
.cell-list {
  padding-top: 10px;
  padding-bottom: 10px;
}

.cell-title {
  width: 10%;
  position: relative;
}

.cell-hd {
  max-width: 72%;
  float: left;
  margin-right: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}

.cell-time {
  font-size: 24rpx;
  color: #bbb;
  line-height: 28px;
}

.cell-link {
  display: inline-block;
  color: #77a7f0;
  text-decoration: underline;
  font-size: 26rpx;
}

.cell-company {
  display: inline-block;
  color: #666;
  font-size: 28rpx;
}

.cell-info {
  color: #666;
  font-size: 28rpx;
}

.cell-menu .cell-popup_top {
  top: 88rpx;
}




/* 页面详情cell */
.cells-title__hd {
  position: relative;
  padding-top: 12px;
  padding-bottom: 12px;
  margin-left: 15px;
  margin-right: 15px;
  padding-left: 12px;
  font-size: 14px;
  color: #999;
}

.cells-title__hd::before {
  position: absolute;
  left: 0;
  content: " ";
  width: 3px;
  height: 17px;
  background-color: #377ade;
}

.cell-label__left {
  min-width: 100px;
  color: #999;
}

/* 列表详情通用样式 */
.clue-foot__items .weui-btn{
  line-height: 98rpx;
}

.clue-foot__items .clue-btn {
  text-align: center;
  background-color: #fafafa;
  border-top: 1px solid #e5e5e5;
  padding-left: 24px;
  padding-right: 24px;
  border-right: 1px solid #e5e5e5;
  color: #999;
  min-width: 90rpx;
}

.bindtap-hover {
  background-color: #f0f0f0 !important;
}

/* 销售记录列表 */
.tran-title {
  width: 10%;
  position: relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}

.tran-hd {
  max-width: 72%;
  float: left;
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #666;
}

.tran-toggle {
  margin-bottom: -60rpx;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}

.tran-toggle.bindtap-hover  {
  opacity: .5;
}

.tran-time {
  font-size: 24rpx;
  color: #aaa;
  line-height: 28px;
}

.tran-img {
  font-size: 28rpx;
  display: block;
  float: left;
  height: 24px;
  width: 24px;
  line-height: 24px;
  text-align: center;
  color: #fff;
  background-color: #f2f2f2;
  border-radius: 50%;
  margin-right: 8px;
}

.tran-cnt {
  padding-top: 4px;
  font-size: 34rpx;
}

.tran-border-top {
  border-top: 1rpx solid #e5e5e5;
}

.tran-inblock {
  display: inline-block
}